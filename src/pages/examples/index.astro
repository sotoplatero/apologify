---
import Layout from '../../layouts/Layout.astro';
import { getAllLetters, getAllRecipients, getAllTones } from '../../lib/letters';
import LetterDirectory from '../../components/LetterDirectory.svelte';

export const prerender = false; // Needs to be dynamic to show generated letters

// Get all letters (static + generated)
const allLetters = await getAllLetters();

// Get unique recipients with counts
const recipientsWithCounts = await getAllRecipients();

// Get unique tones with counts
const tonesWithCounts = await getAllTones();

// Prepare letters for client-side filtering
const lettersForClient = allLetters.map(letter => ({
  slug: letter.slug,
  recipient: letter.recipient,
  context: letter.context,
  tone: letter.tone,
  letters: letter.letters,
  source: letter.source,
  created_at: letter.created_at
}));

