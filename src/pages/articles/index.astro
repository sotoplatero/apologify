---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Get all articles
const articles = await getCollection('articles');

// Sort articles by publication date (from newest to oldest)
articles.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Apology Articles">
  <main class="prose prose-lg mx-auto">
    <h1>Apology Articles</h1>
    <ul class="not-prose space-y-8">
      {articles.map((article) => (
        <li class="bg-white shadow-md rounded-lg p-6">
          <a href={`/articles/${article.slug}`} class="block hover:text-blue-600 transition duration-300">
            <h2 class="text-2xl font-semibold mb-2 text-gray-900">{article.data.title}</h2>
          </a>
          <p class="text-gray-600 mb-4">{article.data.description}</p>
          <time datetime={article.data.date.toISOString()} class="text-sm text-gray-500">
            {article.data.date.toLocaleDateString()}
          </time>
        </li>
      ))}
    </ul>
  </main>
</Layout>
