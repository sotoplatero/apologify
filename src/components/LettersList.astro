import { getAllApologyLetters } from '../lib/database';

// Fetch all apology letters from the database
const letters = await getAllApologyLetters();

<div class="letters-list">
  <h2 class="text-2xl font-bold mb-4">Apology Letters</h2>
  
  {letters.length === 0 ? (
    <p class="text-gray-500">No letters found.</p>
  ) : (
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {letters.map((letter) => (
        <div class="border rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-lg mb-2">{letter.title}</h3>
          <div class="text-sm text-gray-600 mb-2">
            <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded mr-2">
              {letter.recipient}
            </span>
            <span class="inline-block bg-green-100 text-green-800 px-2 py-1 rounded">
              {letter.tone}
            </span>
          </div>
          <p class="text-gray-700 text-sm mb-3 line-clamp-3">
            {letter.content}
          </p>
          <div class="text-xs text-gray-500">
            Situation: {letter.situation}
          </div>
        </div>
      ))}
    </div>
  )}
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 