---
import {
  tones,
  personalRecipients,
  professionalRecipients,
  familyRecipients
} from '../lib/apologyData.js';

const currentYear = new Date().getFullYear();
---

<footer class="bg-base-200 text-base-content">
  <div class="w-full max-w-screen-xl mx-auto py-16 px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
      <!-- About -->
      <div class="col-span-2">
        <h3 class="text-lg font-semibold mb-4">Apologify</h3>
        <p class="text-sm mb-4">Create sincere, personalized apology letters in seconds with our AI-powered generator. Free, private, and easy to use.</p>
        <div class="flex flex-col gap-2 text-sm">
          <a href="/" class="hover:text-primary">Home</a>
          <a href="/generator" class="hover:text-primary">AI Generator</a>
          <a href="/examples" class="hover:text-primary">Browse Examples</a>
        </div>
      </div>

      <!-- Professional -->
      <div>
        <h3 class="text-lg font-semibold mb-4">
          <div>Professional</div>
          <div class="text-sm text-base-content/70">Apology Generator</div>
        </h3>
        <ul class="space-y-2 text-sm">
          {professionalRecipients.filter(r => r.value !== 'other').map((recipient) => (
            <li>
              <a
                href={`/generator/${recipient.value}`}
                class="hover:text-primary"
              >
                To {recipient.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Personal -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Personal</h3>
        <ul class="space-y-2 text-sm">
          {personalRecipients.map((recipient) => (
            <li>
              <a
                href={`/generator/${recipient.value}`}
                class="hover:text-primary"
              >
                To {recipient.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Family -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Family</h3>
        <ul class="space-y-2 text-sm">
          {familyRecipients.map((recipient) => (
            <li>
              <a
                href={`/generator/${recipient.value}`}
                class="hover:text-primary"
              >
                To {recipient.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- By Tone -->
      <div>
        <h3 class="text-lg font-semibold mb-4">By Tone</h3>
        <ul class="space-y-2 text-sm">
          {tones.filter(t => t.value !== 'other').map((tone) => (
            <li>
              <a
                href={`/examples?tone=${tone.value}`}
                class="hover:text-primary"
              >
                {tone.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-base-300 text-center">
      <p>&copy; {currentYear} Apology Letter Generator. All rights reserved.</p>
    </div>
  </div>
</footer>
