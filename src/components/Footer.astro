---
import { tones, recipients } from "../lib/apologyData.js";

const currentYear = new Date().getFullYear();

const topTones = tones.filter((t) => t.value !== "other").slice(0, 6);
---

<footer
  class="bg-gradient-to-b from-gray-50 to-gray-100 border-t border-gray-200 text-gray-700"
>
  <!-- Top Section: Logo + Social -->
  <div class="w-full max-w-screen-xl mx-auto px-4 pt-12 pb-8">
    <!-- Middle Section: Link Columns -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 font-sans">
      <!-- Apologify (Product + Company merged) -->
      <div>
        <div
          class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6 mb-4"
        >
          <div>
            <a
              href="/"
              class="text-2xl font-bold text-gray-800 flex items-center gap-2 font-serif"
            >
              <span class="text-3xl">ðŸ’Œ</span>
              Apologify
            </a>
            <p class="text-sm text-gray-500 mt-2 max-w-md font-sans">
              Create sincere, personalized apology letters in seconds with our
              AI-powered generator. Free, private, and easy to use.
            </p>
          </div>
        </div>
        <ul class="space-y-2.5 text-sm">
          <li>
            <a
              href="/generator"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >AI Generator</a
            >
          </li>
          <li>
            <a
              href="/examples"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >Browse Examples</a
            >
          </li>
          <li>
            <a
              href="/articles"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >Articles</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >Contact</a
            >
          </li>
          <li>
            <a
              href="/privacy"
              class="text-gray-500 hover:text-purple-600 transition-colors"
              >Privacy Policy</a
            >
          </li>
        </ul>
      </div>

      <!-- Generators by Recipient -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-800 uppercase tracking-wider mb-4"
        >
          Generators
        </h3>
        <ul class="space-y-2.5 text-sm">
          {
            recipients.map((r) => (
              <li>
                <a
                  href={`/generator/${r.value}`}
                  class="text-gray-500 hover:text-purple-600 transition-colors"
                >
                  To {r.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Directory by Recipient -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-800 uppercase tracking-wider mb-4"
        >
          Directory
        </h3>
        <ul class="space-y-2.5 text-sm">
          {
            recipients.map((r) => (
              <li>
                <a
                  href={`/examples?recipient=${r.value}`}
                  class="text-gray-500 hover:text-purple-600 transition-colors"
                >
                  To {r.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Tones -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-800 uppercase tracking-wider mb-4"
        >
          Tones
        </h3>
        <ul class="space-y-2.5 text-sm">
          {
            topTones.map((t) => (
              <li>
                <a
                  href={`/examples?tone=${t.value}`}
                  class="text-gray-500 hover:text-purple-600 transition-colors"
                >
                  {t.label} Letters
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="border-t border-gray-200">
    <div
      class="w-full max-w-screen-xl mx-auto px-4 py-5 flex flex-col sm:flex-row justify-between items-center gap-2 text-sm text-gray-400 font-sans"
    >
      <p>&copy; {currentYear} Apologify. All rights reserved.</p>
      <p>
        Made with <span class="text-red-400">&#9829;</span> to help mend relationships
      </p>
    </div>
  </div>
</footer>
