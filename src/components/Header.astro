---
const navItems = [
  { href: "/examples", text: "Examples" },
  { href: "/articles", text: "Articles" },
];
---

<header
  class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200"
>
  <div
    class="w-full max-w-screen-xl mx-auto px-4 py-3 flex justify-between items-center"
  >
    <!-- Logo -->
    <a
      href="/"
      class="text-lg font-semibold text-gray-800 flex items-center gap-1 font-serif"
    >
      <span class="text-3xl" role="img" aria-label="Apology letter">ðŸ’Œ</span>
      <span class="text-xl">Apologify</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium text-gray-600 hover:text-purple-600 transition-colors font-sans"
          >
            {item.text}
          </a>
        ))
      }
      <a href="/generator" class="btn btn-primary btn-sm text-white font-sans">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
          ></path>
        </svg>
        Write an Apology
      </a>
    </nav>

    <!-- Mobile: CTA + Hamburger -->
    <div class="flex md:hidden items-center gap-2">
      <a href="/generator" class="btn btn-primary btn-sm text-white font-sans">
        Write an Apology
      </a>

      <!-- DaisyUI Dropdown for mobile menu -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-sm btn-square">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
        <ul
          tabindex="0"
          class="dropdown-content menu p-2 shadow-lg bg-base-100 rounded-box w-52 mt-2 border border-gray-200 font-sans"
        >
          {
            navItems.map((item) => (
              <li>
                <a href={item.href} class="text-gray-700 hover:text-purple-600">
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</header>
