<script>
  function addCopyFunctionality() {
    const blockquotes = document.querySelectorAll('pre');
    blockquotes.forEach((blockquote, index) => {
      const button = document.createElement('button');
      button.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
        </svg>
        Copy
      `;
      button.className = 'copy-button btn btn-outline btn-sm absolute bottom-2 right-2 flex items-center';
      button.setAttribute('data-index', index.toString());
      blockquote.style.position = 'relative';
      blockquote.appendChild(button);
    });

    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target && (target.classList.contains('copy-button') || target.closest('.copy-button'))) {
        const button = target.classList.contains('copy-button') ? target : target.closest('.copy-button');
        if (!button) return;
        const index = button.getAttribute('data-index');
        const blockquote = document.querySelectorAll('pre')[parseInt(index)];
        const text = blockquote.textContent || '';
        
        navigator.clipboard.writeText(text).then(() => {
          button.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            Copied!
          `;
          setTimeout(() => {
            button.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
              </svg>
              Copy
            `;
          }, 2000);
        }).catch(err => {
          console.error('Failed to copy text: ', err);
        });
      }
    });
  }

  // Run the function when the DOM is fully loaded
  document.addEventListener('DOMContentLoaded', addCopyFunctionality);
</script>

<style>
  pre:hover .copy-button {
    opacity: 1;
  }
  .copy-button {
    transition: opacity 0.3s ease;
  }
</style>
