---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Still Don’t Know What to Say? Let Us Help.",
  description = "No stress. No second guessing. Just a letter you can send now."
} = Astro.props;
---

<!-- CTA Section destacado con diseño moderno -->
<div class="relative my-16">
  <!-- Background con gradiente y efectos -->
  <div class="relative bg-gradient-to-br from-purple-600 via-purple-700 to-blue-700 rounded-3xl overflow-hidden shadow-2xl">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-20 -right-20 w-40 h-40 bg-white/10 rounded-full blur-xl"></div>
      <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-white/10 rounded-full blur-xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-60 h-60 bg-white/5 rounded-full blur-2xl"></div>
    </div>
    
    <!-- Patrón de puntos decorativo -->
    <div class="absolute inset-0 opacity-10">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <circle cx="20" cy="20" r="2" fill="white"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#dots)"/>
      </svg>
    </div>
    
    <!-- Contenido del CTA -->
    <div class="relative px-6 py-16 md:px-12 md:py-20 text-center">
      <div class="max-w-2xl mx-auto space-y-8">
        <!-- Badge superior -->
        <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full border border-white/30">
          <svg class="w-4 h-4 text-white mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium text-white">Quick & Confidential</span>
        </div>
        
        <h2 class="text-3xl md:text-5xl font-bold text-white leading-tight tracking-tight">
          {title}
        </h2>
        
        <p class="text-lg md:text-xl text-purple-100 leading-relaxed max-w-xl mx-auto">
          {description}
        </p>
        
        <!-- Botón CTA destacado -->
        <div class="pt-4">
          <a href="/generator" class="group relative inline-flex items-center space-x-3 px-10 py-5 bg-white text-purple-700 rounded-2xl hover:bg-purple-50 transition-all duration-300 font-bold shadow-xl hover:shadow-2xl hover:scale-105 text-xl">
            <!-- Efecto de brillo -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -skew-x-12 transform translate-x-[-100%] group-hover:translate-x-[200%] transition-transform duration-1000"></div>
            
            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <span class="relative">Write Your Letter Now</span>
            <svg class="w-6 h-6 text-purple-600 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
        
        <!-- Elementos de confianza -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-6 text-purple-100">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">100% Private</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">Ready in 2 Minutes</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">AI-Powered</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
