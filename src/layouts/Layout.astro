---
import LayoutBase from './LayoutBase.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
	schema?: Record<string, any>;
}

const { title, description = title, schema } = Astro.props;
---

<LayoutBase title={title} description={description} schema={schema}>
	<Header />
	<main class="flex-grow w-full max-w-screen-lg mx-auto px-4">
		<slot />
	</main>
	<Footer />
</LayoutBase>
